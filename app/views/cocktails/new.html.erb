<% title "Add Cocktail" %>
<div class="ingredients-container">
  <div class="add-ingredients">
    <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Add Cocktail" %>
    <% end %>
  </div>
</div>
